{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"Empty": {
		"prefix": "empty",
		"body": [
			"\\documentclass[12pt]{article}",
			"",
			"\\begin{document}",
				"\t$0",
			"\\end{document}"
		]
	},

	"Skeleton": {
		"prefix": "skeleton",
		"body": [
			"\\documentclass[12pt]{article}",
			"",
			"% Packages",
			"\\usepackage{amsmath}",
			"\\usepackage{amsfonts}",
			"\\usepackage{amsthm}",
			"\\usepackage{amssymb}",
			"\\usepackage{cancel}",
			"\\usepackage{fancyhdr}",
			"\\usepackage{mathtools}",
			"",
			"% Document",
			"\\begin{document}",
			"",
			"% Variables",
			"\\newcommand{\\theAuthor}{Paul Virally}",
			"\\newcommand{\\theTitle}{Example Title}",
			"\\newcommand{\\theSubtitle}{Example Subtitle}",
			"\\newcommand{\\theDate}{\\today}",
			"",
			"% Headers and footers",
			"\\pagestyle{fancy}",
			"\\lhead{\\theAuthor{}}",
			"\\chead{\\textit{\\theSubtitle{}}}",
			"\\rhead{\\theTitle{}}",
			"\\lfoot{}",
			"\\cfoot{}",
			"\\rfoot{Page \\thepage}",
			"",
			"% Cover page",
			"\\begin{titlepage}",
				"\t\\begin{center}",
					"\t\t\\textsc{\\Huge{\\theTitle}}\\\\\\[0.5cm]",
					"\t\t\\textsc{\\Large{\\theSubtitle}}\\\\\\[4cm]",
					"\t\t\\theAuthor{}\\\\\\[0.2cm]",
					"\t\t\\theDate{}",
				"\t\\end{center}",
			"\\newpage",
			"\\end{titlepage}",
			"",
			"\\section{$0}",
			"",
			"\\end{document}"
		]
	},

	"Notes Skeleton": {
		"prefix": "notes",
		"body": [
			"\\documentclass[12pt]{article}",
			"",
			"% Packages",
			"\\usepackage{amsmath}",
			"\\usepackage{amsfonts}",
			"\\usepackage{amsthm}",
			"\\usepackage{amssymb}",
			"\\usepackage{cancel}",
			"\\usepackage{fancyhdr}",
			"\\usepackage{mathtools}",
			"",
			"% Document",
			"\\begin{document}",
			"",
			"% Variables",
			"\\newcommand{\\theAuthor}{Paul Virally}",
			"\\newcommand{\\theTitle}{${1:Course Name}}",
			"\\newcommand{\\theSubtitle}{${2:Lecture number and module}}",
			"\\newcommand{\\theDate}{\\today}",
			"",
			"% Headers and footers",
			"\\pagestyle{fancy}",
			"\\lhead{\\theAuthor{}}",
			"\\chead{\\textit{\\theSubtitle{}}}",
			"\\rhead{\\theTitle{}}",
			"\\lfoot{}",
			"\\cfoot{}",
			"\\rfoot{Page \\thepage}",
			"",
			"% Cover page",
			"\\begin{titlepage}",
				"\t\\begin{center}",
					"\t\t\\textsc{\\Huge{\\theTitle}}\\\\\\[0.5cm]",
					"\t\t\\textsc{\\Large{\\theSubtitle}}\\\\\\[4cm]",
					"\t\t\\theAuthor{}\\\\\\[0.2cm]",
					"\t\t\\theDate{}",
				"\t\\end{center}",
			"\\newpage",
			"\\end{titlepage}",
			"",
			"\\section{$0}",
			"",
			"\\end{document}"
		]
	},

	"Assignment Skeleton": {
		"prefix": "assignment",
		"body": [
			"\\documentclass{assignment}",
			"",
			"% Packages",
			"\\usepackage{amsmath}",
			"\\usepackage{amsfonts}",
			"\\usepackage{amsthm}",
			"\\usepackage{amssymb}",
			"\\usepackage{cancel}",
			"\\usepackage{mathtools}",
			"",
			"% Assignment details",
			"\\courselabel{}",
			"\\exercisesheet{${1:Class}}{Assignment ${2:Assignment Number}}",
			"\\university{University of Waterloo}",
			"\\school{Department of ${3:Department}}",
			"\\student{Paul Virally --- ID: ${4:Student Number}}",
			"\\semester{${5:Season} ${6:Year}}",
			"\\date{\\today}",
			"",
			"% Begin document",
			"\\begin{document}",
			"\\begin{problemlist}",
			"",
			"% First problem",
			"\\pbitem{\\emph{${7:Prompt}}}",
			"",
			"% Solution to the first problem",
			"\\begin{problem}",
				"\t$0",
			"\\end{problem} % First problem",
			"",
			"% Final answer to the first problem",
			"\\begin{answer}",
				"\t\\[\\]",
			"\\end{answer} % First problem",
			"\\end{problemlist}",
			"\\end{document}"
		]
	},

	"Assignment Problem": {
		"prefix": "prob",
		"body": [
			"% ${1:Problem Number} problem question",
			"\\pbitem{\\emph{${2:Problem prompt}}}",
			"",
			"% Solution to the ${1:Problem Number} problem",
			"\\begin{problem}",
				"\t$0",
			"\\end{problem} % ${1:Problem Number} problem"
		]
	},

	"Align": {
		"prefix": "align",
		"body": [
			"\\begin{align}",
				"\t$0",
			"\\end{align}"
		]
	},

	"flalign": {
		"prefix": "flalign",
		"body": [
			"\\begin{flalign}",
				"\t$0",
			"\\end{flalign}"
		]
	},

	"Align*": {
		"prefix": "align*",
		"body": [
			"\\begin{align*}",
				"\t$0",
			"\\end{align*}"
		]
	},

	"flalign*": {
		"prefix": "flalign*",
		"body": [
			"\\begin{flalign*}",
				"\t$0",
			"\\end{flalign*}"
		]
	},

	"\\left(\\right)": {
		"prefix": "lr",
		"body": [
			"\\left($0\\right)"
		]
	},

	"Fraction": {
		"prefix": "fr",
		"body": [
			"\\frac{$1}{$2} $0"
		]
	},

	"Align Columns": {
		"prefix": "coleq",
		"body": [
			"$0&= \\\\\\"
		]
	},

	"Math Mode": {
		"prefix": "\\9",
		"body": [
			"\\($0\\)"
		]
	},

	"Center Math Mode": {
		"prefix": "\\[",
		"body": [
			"\\[$0\\"
		]
	},

	"New Line": {
		"prefix": "\\\\",
		"body": [
			"\\\\\\"
		]
	},

	"Begin and End": {
		"prefix": "bend",
		"body": [
			"\\begin{$1}",
				"\t$0",
			"\\end{$1}"
		]
	},

	"Bmatrix": {
		"prefix": "bmat",
		"body": [
			"\\begin{bmatrix}",
				"\t$0",
			"\\end{bmatrix}"
		]
	},

	"Vmatrix": {
		"prefix": "vmat",
		"body": [
			"\\begin{vmatrix}",
				"\t$0",
			"\\end{vmatrix}"
		]
	},

	"Pmatrix": {
		"prefix": "pmat",
		"body": [
			"\\begin{pmatrix}",
				"\t$0",
			"\\end{pmatrix}"
		]
	},

	"Row Operation Macro": {
		"prefix": "macro-rowops",
		"body": [
			"% https://tex.stackexchange.com/a/3149",
			"\\newcount\\arrowcount",
			"\\newcommand\\rowops[1]{",
				"\t\\global\\arrowcount#1",
				"\t\\ifnum\\arrowcount>0",
					"\t\t\\begin{matrix}",
					"\t\t\\expandafter\\nextarrow",
				"\t\\fi",
			"}",
			"% https://tex.stackexchange.com/a/3149",
			"\\newcommand\\nextarrow[1]{",
				"\t\\global\\advance\\arrowcount-1",
				"\t\\ifx\\relax#1\\relax\\else \\xrightarrow{#1}\\fi",
				"\t\\ifnum\\arrowcount=0",
					"\t\t\\end{matrix}",
				"\t\\else",
					"\t\t\\\\",
					"\t\t\\expandafter\\nextarrow",
				"\t\\fi",
			"}"
		]
	},

	"Derivative": {
		"prefix": "dv",
		"body": [
			"\\dv{$1}{$2} $0"
		]
	},

	"Minipage": {
		"prefix": "mini",
		"body": [
			"\\begin{minipage}{$1\\textwidth}",
			"\t$0",
			"\\end{minipage}%"
		]
	}
}